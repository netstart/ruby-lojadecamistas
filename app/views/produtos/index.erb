<table class="table table-bordered">
  <thead>
  <tr>
    <th>Nome</th>
    <th>Descrição</th>
    <th>Preço</th>
    <th>Quantidade</th>
    <th></th>
  </tr>
  </thead>
  <tbody>

  <% @produtos.each do |produto| %>
    <tr>
      <td><%= produto.nome %></td>
      <td><%= produto.descricao %></td>
      <td><%= produto.preco %></td>
      <td><%= produto.quantidade %></td>
      <td><a href="produtos/<%= produto.id %>/remove">Remover</a></td>
  <% end %>
  </tbody>
</table>
